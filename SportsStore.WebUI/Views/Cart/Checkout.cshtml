@model SportsStore.Domain.Entities.ShippingDetails
@{
    ViewBag.Title = "SportsStore: Checkout";
}

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <table>
        <tbody>
            <tr>
                <th colspan="2">Ship to</th>
            </tr>
            <tr>
                <td>Name:</td>
                <td>@Html.EditorFor(x => x.Name)</td>
            </tr>
            <tr>
                <th colspan="2">Address</th>
            </tr>
            <tr>
                <td>Line 1:</td>
                <td>@Html.EditorFor(x => x.Line1)</td>
            </tr>
            <tr>
                <td>Line 2:</td>
                <td>@Html.EditorFor(x => x.Line2)</td>
            </tr>
            <tr>
                <td>Line 3:</td>
                <td>@Html.EditorFor(x => x.Line3)</td>
            </tr>
            <tr>
                <td>City</td>
                <td>@Html.EditorFor(x => x.City)</td>
            </tr>
            <tr>
                <td>State</td>
                <td>@Html.EditorFor(x => x.State)</td>
            </tr>
            <tr>
                <td>Country</td>
                <td>@Html.EditorFor(x => x.Country)</td>
            </tr>
        </tbody>
    </table>

